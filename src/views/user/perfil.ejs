<%- include('../templates/head', {tituloWeb: '- Perfil' }) %>

    <!-- Start User Profile Area -->
    <section class="about-us section">
        <div class="">
            <div class="row">
                
                <%- include('templates/aside') %>

                <div class="col-lg-9 col-md-8">
                    <div class="container mt-4">
                        <div class="about-left mt-4">
                            <div class="section-title">
                                <h2 class="wow fadeInUp" data-wow-delay=".4s">Esta es tu sección de cursos!</h2>
                                <p class="wow fadeInUp" data-wow-delay=".6s">Aquí se listan todos los cursos que haz
                                    adquirido, y podrás verlos cuando tú quieras <i class="far fa-smile-wink"></i></p>
                            </div>
                        </div>

                        <div class="services">
                            <div class="single-head">
                                <div class="row">
                                    <% if (userCourses.length  > 0) { %>
                                        <% userCourses.forEach(course => { %>
                                            <div class="col-lg-4 col-md-6 col-12 mb-4">
                                                <div class="single-service wow fadeInUp text-center" data-wow-delay=".2s">
        
                                                    <h3><a href="#">Curso de <%= course.name %> </a></h3>
        
                                                    <div class="image mt-3">
                                                        <img src="/images/products/<%= course.logo %> " alt="#"
                                                            height="200px" width="200px">
                                                    </div>
                                                    <div class="button mt-5">
                                                        <a href="/curso/<%= course.name %> " class="btn">Vizualizar Curso</a>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    <% } else { %>
                                        <div class="col-lg-12 wow fadeInDown" data-wow-delay=".3s">
                                            <div class="row">
                                                <div class="col-lg-12 d-flex justify-content-center">
                                                    <h5 class="">No cuentas con cursos, por favor ve a <a href="/tienda" style="color: #3763EB !important;">Tienda</a> y adquiere el que más te guste!</h5>
                                                </div>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- /End User Profile Area -->
    <script>
        const i = document.querySelectorAll('i');
        const h6 = document.querySelectorAll('h6');

        i[0].classList.add('text-primary');
        h6[0].classList.add('text-primary');

    </script>
    <%- include('../templates/footer') %>